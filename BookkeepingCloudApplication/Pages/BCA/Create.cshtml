@page
@model BookkeepingCloudApplication.Pages.BCA.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Invoice</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-6">               
                        <div class="form-group">
                            <label asp-for="Invoice.InvoiceType" class="control-label"></label>
                            <select asp-for="Invoice.InvoiceType" class="form-control">
                                <option value="SI">Sales Invoice</option>
                                <option value="PI">Purchase Invoice</option>
                            </select>
                            <span asp-validation-for="Invoice.InvoiceType" class="text-danger"></span>
                        </div>
                      
                        <div class="form-group">
                            <label asp-for="Invoice.InvoiceNumber" class="control-label"></label>
                            <input asp-for="Invoice.InvoiceNumber" class="form-control" />
                            <span asp-validation-for="Invoice.InvoiceNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Invoice.AccountType" class="control-label" style="display: inline;">Account Type: </label>
                            <p id="accountTypeLabel" style="display: inline;">Customer</p>
                            <input asp-for="Invoice.AccountType" type="hidden" class="form-control" />
                            <span asp-validation-for="Invoice.AccountType" class="text-danger"></span>
                        </div>
                    <div class="form-group">
                        <label asp-for="Invoice.AccountName" class="control-label"></label>
                        <input asp-for="Invoice.AccountName" class="form-control" />
                        <span asp-validation-for="Invoice.AccountName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Invoice.AccountReference" class="control-label" style="display: inline;">Reference: </label>
                        <p id="accountRef" style="display: inline;"></p>
                        <input asp-for="Invoice.AccountReference" type="hidden" class="form-control" />
                        <span asp-validation-for="Invoice.AccountReference" class="text-danger"></span>
                    </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Invoice.InvoiceDate" class="control-label"></label>
                            <input asp-for="Invoice.InvoiceDate" id="invoiceDate" type="date" class="form-control" />
                            <span asp-validation-for="Invoice.InvoiceDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Invoice.InvoiceStatus" class="control-label"></label>
                            <select asp-for="Invoice.InvoiceStatus" class="form-control">
                                <option value="Not Paid">Not Paid</option>
                                <option value="Paid">Paid</option>
                            </select>
                            <span asp-validation-for="Invoice.InvoiceStatus" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                        <label asp-for="Invoice.InvoiceControlAccount" class="control-label" style="display: inline;">Control Account: </label>
                        <p id="controlAccountLabel" style="display: inline;">Debtors Control</p>
                        <input type="hidden" asp-for="Invoice.InvoiceControlAccount" />
                        <span asp-validation-for="Invoice.InvoiceControlAccount" class="text-danger"></span>
                        <p style="display: inline;"> ||   </p>
                        <label asp-for="Invoice.InvoiceAccount" class="control-label" style="display: inline;">Account Group: </label>
                        <p id="invoiceAccountLabel" style="display: inline;">SA01</p>
                            <input type="hidden" asp-for="Invoice.InvoiceAccount" />
                            <span asp-validation-for="Invoice.InvoiceAccount" class="text-danger"></span>
                        </div>
                    <div class="form-group">
                        <label asp-for="Invoice.AccountEmail" class="control-label"></label>
                        <input asp-for="Invoice.AccountEmail" class="form-control" />
                        <span asp-validation-for="Invoice.AccountEmail" class="text-danger"></span>
                    </div>
                    </div>
                </div>
    <hr />
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Invoice.InvoiceItem" class="control-label">Stock Item</label>
                        <input asp-for="Invoice.InvoiceItem" class="form-control" />
                        <span asp-validation-for="Invoice.InvoiceItem" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Invoice.Quantity" class="control-label"></label>
                        <input asp-for="Invoice.Quantity" class="form-control" />
                        <span asp-validation-for="Invoice.Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Invoice.NetAmount" class="control-label">Net Amount</label>
                        <input asp-for="Invoice.NetAmount" class="form-control" />
                        <span asp-validation-for="Invoice.NetAmount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Invoice.TaxCode" class="control-label">Tax (%)</label>
                        <input asp-for="Invoice.TaxCode" class="form-control" />
                        <span asp-validation-for="Invoice.TaxCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">                     
                       
                        <div class="form-group">
                            <label asp-for="Invoice.Description" class="control-label"></label>
                            <input asp-for="Invoice.Description" class="form-control" />
                            <span asp-validation-for="Invoice.Description" class="text-danger"></span>
                        </div>                       
                        <div class="form-group">
                            <label asp-for="Invoice.UnitPrice" class="control-label">Unit Price</label>
                            <input asp-for="Invoice.UnitPrice" class="form-control" />
                            <span asp-validation-for="Invoice.UnitPrice" class="text-danger"></span>
                        </div>
                    <div class="form-group">
                        <label asp-for="Invoice.CurrencyCode" class="control-label">Currency</label>
                        <input asp-for="Invoice.CurrencyCode" class="form-control" />
                        <span asp-validation-for="Invoice.CurrencyCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Invoice.TaxAmount" class="control-label">Tax Amount</label>
                        <input asp-for="Invoice.TaxAmount" class="form-control" />
                        <span asp-validation-for="Invoice.TaxAmount" class="text-danger"></span>
                    </div>
                </div>
            </div>  
            <div class="form-group">
                <label asp-for="Invoice.GrossAmount" class="control-label">Gross Total</label>
                <input asp-for="Invoice.GrossAmount" class="form-control" />
                <span asp-validation-for="Invoice.GrossAmount" class="text-danger"></span>
            </div>   
            <div class="row">                             
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Invoice.EnteredBy" class="control-label">Created By</label>
                        <input asp-for="Invoice.EnteredBy" class="form-control" />
                        <span asp-validation-for="Invoice.EnteredBy" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6" style="text-align:right">
                    <div class="form-group">
                        <label asp-for="Invoice.DateEntered" class="control-label" style="display: inline; text-align:end;">Created Date: </label>
                        <p style="display: inline; align-content:baseline;">@Model.Invoice.DateEntered.ToShortDateString()</p>
                    </div>
                </div>
            </div>
          <hr/>
            <div class="accordion-button">
                <div class="col-6">
                     <a asp-page="Index">Back to List</a>
                </div>
                <div class="col-6" style="text-align:right">
                    <input type="submit" value="Create Invoice" class="btn btn-primary" />
                </div>
                
            </div>
        </form>
    </div>
</div>

<div>
   
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            console.log("DOM fully loaded and parsed");

            document.getElementById('invoiceDate').valueAsDate = new Date();
            console.log("Date set");

            var invoiceTypeDropdown = document.getElementById('Invoice_InvoiceType');
            if (invoiceTypeDropdown) {
                console.log("invoiceType element found");
            } else {
                console.log("invoiceType element not found");
            }

            invoiceTypeDropdown.addEventListener('change', function () {
                console.log("Change event triggered");
                var invoiceType = this.value;
                var controlAccountHidden = document.getElementById('Invoice_InvoiceControlAccount');
                var controlAccountLabel = document.getElementById('controlAccountLabel');

                var invoiceAccountSelectHidden = document.getElementById('Invoice_InvoiceAccount');
                var invoiceAccountLabel = document.getElementById('invoiceAccountLabel');

                var accountTypeHidden = document.getElementById('Invoice_AccountType');
                var accountTypeLabel = document.getElementById('accountTypeLabel');
                

                if (invoiceType === 'SI') 
                {
                    controlAccountHidden.value = 'DRCTL';
                    controlAccountLabel.textContent = 'Debtors Control';

                    invoiceAccountSelectHidden.value = 'SA01';
                    invoiceAccountLabel.textContent = 'SA01';

                    accountTypeHidden.value = 'Customer';
                    accountTypeLabel.textContent = 'Customer';

                }
                else if (invoiceType === 'PI') {
                    controlAccountHidden.value = 'CRCTL';
                    controlAccountLabel.textContent = 'Creditors Control';

                    invoiceAccountSelectHidden.value = 'PUR01';
                    invoiceAccountLabel.textContent = 'PUR01';

                    accountTypeHidden.value = 'Supplier';
                    accountTypeLabel.textContent = 'Supplier';
                }
            });
        });
    </script>
}

