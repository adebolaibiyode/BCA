@page
@model BookkeepingCloudApplication.Pages.BCA.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:blueviolet">BCA Invoicing </h1>

<div class="row">
    <p class="btn-info accordion-button">
        <a asp-page="Create">Create New Invoice</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th style="color:orangered"></th>
                <th style="color:orangered">                 
                    Type
                </th>
                <th style="color:orangered">             
                    Date
                </th>
                <th style="color:orangered">                   
                    Invoice
                </th>
                <th style="color:orangered">
                    Status
                </th>           
                <th style="color:orangered">
                    Account
                </th>
                <th style="color:orangered">
                    Type
                </th>
                <th style="color:orangered">
                    Email
                </th>
                <th style="color:orangered">
                    Reference
                </th>
                <th style="color:orangered">
                    Item
                </th>
                <th style="color:orangered">
                    Description
                </th>
                <th style="color:orangered">
                    Qty
                </th>
                <th style="color:orangered">
                    UnitPrice
                </th>
                <th style="color:orangered">
                    Net
                </th>           
                <th style="color:orangered">
                    Tax
                </th>
                <th style="color:orangered">
                    Gross
                </th>
                <th style="color:orangered">
                    Currency
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Invoice)
            {
                <tr style="color:blue">
                    <td style="width:-moz-fit-content">
                        <a asp-page="./InvoiceDetail" asp-route-id="@item.InvoiceNumber">View Invoice</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceType)
                    </td>
                    <td>                        
                        @item.InvoiceDate.Date.ToString("MM/dd/yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceStatus)
                    </td>
             
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountReference)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceItem)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitPrice)
                    </td>
                    <td>
                        @item.NetAmount.ToString("N2")
                    </td>
                
                    <td>
                        @item.TaxAmount.ToString("N2")
                    </td>
                    <td>
                        @item.GrossAmount.ToString("N2")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrencyCode)
                    </td>           
                   
                </tr>
            }
        </tbody>
    </table>

</div>
